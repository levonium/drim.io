<!DOCTYPE html>
<html lang="en">
  <head>
    {% include 'head.njk' %}

    {% if site.env %}
      {% set css %}{% include 'app.css' %}{% endset %}
      <style>
        {{ css | safe }}
      </style>
    {% else %}
    <link rel="stylesheet" href="/static/app.css">
    {% endif %}
  </head>

  <body x-data="DRIM.layout()" x-init="init()" @keydown.escape="closeWhateverIsOpen(true)" :class="mode">
    <a href="#main" class="skip-link">Skip to main content</a>

    <div id="page" class="w-screen h-screen flex items-center justify-center text-body gradient__body"
      x-ref="page" data-translate-to="es">

      {{ content | safe }}

      {% include 'oops.njk' %}
    </div>

    <script src="/static/app.js"></script>
  </body>
</html>
