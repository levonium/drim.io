<section class="absolute inset-0 flex flex-col justify-center px-4 rounded-md gradient__main"
  x-ref="tech" {% pageTransition 'tech', 'section' %}>

  {% sectionHeading 'Technology', 'tech' %}

  <div class="flex items-center">
    <div class="p-2 grid__tech  w-full grid gap-2 grid-cols-3 rounded">

      {% for tech in [
        'php', 'laravel', 'wordpress',
        'mysql', 'python', 'node-js',
        'html', 'css', 'sass',
        'javascript', 'typescript', 'vue-js',
        'figma', 'sketch', 'photoshop'
        ] %}

        <span class="icon__tech relative block w-full h-full p-2 border border-black rounded text-center transition duration-300 ease-in-out"
          name="{{ tech.replace('-', ' ') }}">
          {% include '_svg/tech/' + tech + '.svg' %}
        </span>

      {% endfor %}

    </div>
  </div>
</section>
